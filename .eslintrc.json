{
	"root": true,
	"parser": "babel-eslint",
	"extends": ["airbnb", "prettier", "prettier/react"],
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"plugins": ["prettier", "react"],
	"rules": {
		"linebreak-style": "off",
		"indent": ["error", "tab"]
	}
}
